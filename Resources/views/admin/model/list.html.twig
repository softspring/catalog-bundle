{% trans_default_domain 'sfs_catalog' %}
{% extends '@SfsCatalog/admin_layout.html.twig' %}
{% block title %}{{ 'admin_models.list.page_title'|trans }}{% endblock %}

{% block breadcrums_content %}
    {{ parent() }}
    <li class="breadcrumb-item active" aria-current="page">{{ 'admin_models.list.breadcrumb'|trans }}</li>
{% endblock breadcrums_content %}

{% block content %}
    {% block content_header %}
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="h3">{{ 'admin_models.list.title'|trans }}</h1>
            <a href="{{ url('sfs_catalog_admin_models_create') }}" class="btn btn-primary mb-3">{{ 'admin_models.list.actions.create.button'|trans }}</a>
        </div>
    {% endblock content_header %}

    {% block filter_form %}
        {{ form_start(filterForm) }}
        {{ form_widget(filterForm) }}
        {{ form_rest(filterForm) }}
        {{ form_end(filterForm) }}
    {% endblock filter_form %}

    {% block table %}
        {% embed '@SfsAdmin/components/table.html.twig' with {'collection':entities, 'pagination_route': 'sfs_catalog_admin_models_list' } %}
            {% trans_default_domain 'sfs_catalog' %}
            {% block ths %}
                <th scope="col">{{ 'admin_models.list.fields.product.header'|trans }}</th>
                <th scope="col">{{ 'admin_models.list.fields.name.header'|trans }}</th>
                <th scope="col">{{ 'admin_models.list.fields.sku.header'|trans }}</th>
                <th scope="col">{{ 'admin_models.list.actions.header'|trans }}</th>
            {% endblock ths %}

            {% block tbody %}
                {% include '@SfsCatalog/admin/model/list-page.html.twig' %}
            {% endblock tbody %}
        {% endembed %}
    {% endblock table %}
{% endblock content %}