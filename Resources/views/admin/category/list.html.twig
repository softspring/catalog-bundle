{% trans_default_domain 'sfs_catalog' %}
{% extends '@SfsCatalog/admin_layout.html.twig' %}
{% block title %}{{ 'admin_categories.list.page_title'|trans }}{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">Categories</h1>
        <a href="{{ url('sfs_catalog_admin_categories_create') }}" class="btn btn-primary">Create category</a>
    </div>

    {{ form_start(filterForm) }}
    {{ form_widget(filterForm) }}
    {{ form_rest(filterForm) }}
    {{ form_end(filterForm) }}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">{{ 'admin_categories.list.fields.name.header'|trans }}</th>
                {% if sfs_catalog_supports_subcategories() %}
                    <th scope="col">{{ 'admin_categories.list.fields.parent.header'|trans }}</th>
                {% endif %}
                <th scope="col">{{ 'admin_categories.list.actions.header'|trans }}</th>
    {#            <th>&nbsp;</th>#}
            </tr>
        </thead>

        <tbody>
        {% include '@SfsCatalog/admin/category/list-page.html.twig' %}
        </tbody>

        {% if entities.pages|default(false) %}
            <tfoot>
            <tr>
                <td colspan="20">
                    {% if entities.prevPage %}
                        <a href="{{ url('sfs_catalog_admin_categories_list', app.request.query.all|merge({ page: entities.prevPage })) }}" title="Prev page"><span class="mdi mdi-24px mdi-chevron-left"></span></a>
                    {% endif %}

                    {% if entities.nextPage %}
                        <a class="float-right" href="{{ url('sfs_catalog_admin_categories_list', app.request.query.all|merge({ page: entities.nextPage })) }}" title="Next page"><span class="mdi mdi-24px mdi-chevron-right"></span></a>
                    {% endif %}
                </td>
            </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock content %}