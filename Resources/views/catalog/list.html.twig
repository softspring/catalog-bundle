{% extends '@SfsCatalog/layout.html.twig' %}

{% block content %}
    {% if sfs_catalog_has_categories() %}
        <div class="row">
            <div class="col-2">
                {% for category in sfs_catalog_categories() %}
                    <a href="#">{{ category.name }}</a>
                    <br/>
                {% endfor %}
            </div>
            <div class="col-10">
    {% endif %}

        <div class="row">
        {% for product in products %}
            <div class="card col-3">
                <a href="{{ url('sfs_catalog_product', {'product':product}) }}">{{ product.name }}</a>
            </div>
        {% endfor %}
        </div>

    {% if sfs_catalog_has_categories() %}
            </div>
        </div>
    {% endif %}
{% endblock content %}